{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "mocha": true
    },
    "parserOptions": {
       "sourceType": "script"
   },
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-console": 0,
        "no-unused-expressions": 1,
        "no-unused-vars": 1,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "max-len": [
            2,
            110
        ]
    }
}
